<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <enum id='org.gnome.shell.extensions.pop-cosmic.overview'>
        <value value='0' nick='WORKSPACES'/>
        <value value='1' nick='APPLICATIONS'/>
        <value value='2' nick='LAUNCHER'/>
    </enum>
    <enum id='org.gnome.shell.extensions.pop-cosmic.clock'>
        <value value='0' nick='CENTER'/>
        <value value='1' nick='LEFT'/>
        <value value='2' nick='RIGHT'/>
    </enum>
    <schema id="org.gnome.shell.extensions.pop-cosmic" path="/org/gnome/shell/extensions/pop-cosmic/">
        <key name="overlay-key-action" enum="org.gnome.shell.extensions.pop-cosmic.overview">
          <default>'LAUNCHER'</default>
          <summary>Overlay key action</summary>
          <description>Controls the action of the overlay key, typically Super</description>
        </key>
        <key type="b" name="show-applications-button">
            <default>true</default>
        </key>
        <key type="b" name="show-workspaces-button">
            <default>true</default>
        </key>
        <key type="b" name="show-application-menu">
            <default>false</default>
        </key>
        <key name="clock-alignment" enum="org.gnome.shell.extensions.pop-cosmic.clock">
            <default>'CENTER'</default>
        </key>
        <key type="b" name="workspace-picker-left">
            <default>true</default>
        </key>
    </schema>
</schemalist>
